<table class="table">
  <%= link_to "新規登録", new_admins_item_path %>
  <thead>
    <tr>
      <th>ジャケット</th>
      <th>タイトル</th>
      <th>アーティスト</th>
      <th>在庫</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @item.each do |item| %>

      <tr>
        <td>
          <%= attachment_image_tag item, :jacket_image, :fill, 60, 60, fallback: "no_image.jpg" %>
        </td>

        <td>
          <%= link_to item.title, admins_item_path(item) %>
        </td>

        <td>
          <%= item.artist.name %>
        </td>

        <td>
          <%= item.stock %>
        </td>

        <td>
          <%= link_to "編集", edit_admins_item_path(item) %>
        </td>
      </tr>

    <% end %>
  </tbody>
</table>
