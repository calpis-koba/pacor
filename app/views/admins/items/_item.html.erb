<div class="container">
  <div class="panel panel-default">
    <div class="item_form", style="margin:0 auto; width: 400px;">
      <%= form_with model: [:admins, item], local: true do |f| %>
      
      <p>アーティスト名　<%= f.select :artist_id, artist.collect {|p| [p.name, p.id]}, :prompt => "選択してください" %></p>
      
      <p>シングル/アルバム名　<%= f.text_field :title %></p>
    
      <p>ジャケット画像　<%= f.attachment_field :jacket_image %></p>
    
      <p>価格　<%= f.text_field :price %></p>
    
      <p>レーベル名　<%= f.select :label_id, label.collect {|p| [p.name, p.id]}, :prompt => "選択してください" %></p>
    
      <p>ジャンル名　<%= f.select :jenre_id, jenre.collect {|p| [p.name, p.id]}, :prompt => "選択してください" %></p>
    
      <p>ステータス　<%= f.select :status, ["販売中","販売停止"], :prompt => "選択してください" %></p>
    
      <p>在庫数　<%= f.number_field :stock %></p>
    
      <div id="disks">
        <%= f.fields_for :disks do |disk| %>
          <p>ディスク</p>
          <%= render 'disk_fields', f: disk %>
        <% end %>
        <div class="links">
          <%= link_to_add_association "ディスクを追加", f, :disks, class: "btn btn-success" %>
        </div>
      </div>
      
      <%= f.submit "登録" %>
      
      <% end %>
    </div>
  </div>
</div>