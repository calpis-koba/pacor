<div class="container">
    
    <table>
    
        <tbody>
            <% @item.each do |item| %>
                <hr>
                <div class="items" >
            
                <div class='col-xs-4'>
                    <%= attachment_image_tag item, :jacket_image, :fill, 60, 60, fallback: "no_image.jpg" %>
                </div>
                
                <div class='col-xs-8'>
                    
                    <p><%= item.title %>-<%= item.artist.name %></p>
                
                    <%= link_to "show", users_item_path(item) %>
                
                </div>
                </div>
            <% end %>
            <%= paginate(@item) %>
        </tbody>
    </table>

</div>