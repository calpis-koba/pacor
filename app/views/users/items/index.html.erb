<div class="container">
    <table>
        <tbody>
            <% @item.each do |item| %>
            <div class="panel panel-primary", style="padding-top: 10px;text-align: center; width: 500px;margin: 5px auto;">
                <div class="items" >
            
                    <div class='col-xs-4'>
                        <%= attachment_image_tag item, :jacket_image, :fill, 60, 60, fallback: "/images/no_image.jpg" %>
                    </div>
                    
                    <div class='col-xs-8'>
                        
                        <p><%= item.title %>-<%= item.artist.name %></p>
                    
                        <%= link_to "show", users_item_path(item), class: "btn btn-success" %>
                    
                    </div>
                </div>
            </div>
            <% end %>
            <%= paginate(@item) %>
        </tbody>
    </table>

</div>