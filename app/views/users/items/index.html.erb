<div class="container">
  <div class="row">
    <hr>
    <% @item.each do |item| %>
              <div class="col-sm-6">
      <div class="panel panel-primary">
        <div class="panel-heading">
        </div>
        <div class="panel-body">
            <div class="row">
              <div class="col-sm-6">
                <%= attachment_image_tag item, :jacket_image, :fill, 150, 150, fallback: "/images/no_image.jpg", size: "150x150" %>
              </div>
              <div class="col-sm-6">
                <h3><%= item.title %> - <%= item.artist.name %></h3>
                <p>在庫数: <%= item.stock %></p>
                <p><%= item.status ? "販売中" : "売り切れ" %></p>


                <%= link_to "show", users_item_path(item), class: "btn btn-success" %>
              </div>
            </div>

        </div>
      </div>
      </div>

    <% end %>
    <%= paginate(@item) %>
  </div>
</div>