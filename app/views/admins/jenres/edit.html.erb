<h2>ジャンル一覧</h2>
<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <p>ジャンル名</p>
      <%= form_for [:admins, @name] do |f| %>
        <%= f.text_field :name %>
        <%= f.submit "登録", class: "btn btn-default" %>
      <% end %>
    </div>
    <div class="col-sm-8">
      <table class="table table-striped">
        <tbody>
          <% @jenre.each do |jenre| %>
            <tr>
              <th><%= jenre.name %></th>
              <td>
                <%= link_to "編集", edit_admins_jenre_path(jenre), class: "btn btn-success" %>
                <%= link_to "削除", admins_jenre_path(jenre), class: "btn btn-danger", method: :delete %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
