<div class="container">
    <h2>ユーザ編集</h2>
    
        
        <%= form_with model: @user, url: admins_user_path(@user), local: true do |form| %>
            <div class="panel panel-default">
                <div class="user_form", style="margin: 0 auto; width: 400px">
                <p> 名前(姓・名)</p>
                <%= form.text_field :last_name %>
                <%= form.text_field :first_name %>
                
                <p> 名前(セイ・メイ) </p>
                <%= form.text_field :kana_last_name %>
                <%= form.text_field :kana_first_name %>
                
                <p> 郵便番号 </p>
                <%= form.text_field :postal_code %>
                
                <p> 住所 </p>
                <%= form.text_field :address %>
                
                <p> 電話番号 </p>
                <%= form.text_field :phone %>
                
                <p> メールアドレス </p>
                <%= form.text_field :email %>
                </div>
            </div>
            <div class="user_submit", style="float:right;">
                <%= form.submit "保存", class: "btn btn-success" %>
            </div>
        <% end %>
        
</div>