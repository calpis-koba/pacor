<div class="container">
    
    <%= form_with url: users_orders_path, local: true do |form| %>
    <div class="panel panel-default", style="padding: 10px">
        <table>
        <p>配送</p>
        <hr>
        <br>
        <label>
            <%= radio_button_tag "a", -1 %>この住所を使う
        </label>
        <%= @user.postal_code %>
        <%= @user.address %>
        </br>
        
        <br>
        <% @user.addresses.each do |ad| %>
            <label>
                <%= radio_button_tag "a", ad.id %>この住所を使う
            </label>
            <br>
                <%= ad.name %>
                <%= ad.postal_code %>
                <%= ad.address %>
                <%= link_to "編集",edit_users_address_path(ad) %>
                <%= link_to "削除",users_address_path(ad), method: :delete %>
                </br>
        <% end %>
        </br>
        
        <br>
        <label>
             <%= radio_button_tag "a", 0 %>この住所を使う
        </label>
        

        <%= form.label "氏名" %>
        <%= form.text_field :name %>
        
        <%= form.label "郵便番号" %>
        <%= form.text_field :postal_code %>
        
        <%= form.label "都道府県" %>
        <%= form.select :prefectures, ["北海道","青森県","岩手県","宮城県","秋田県","山形県","福島県","茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県","新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県","静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県","奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県","徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県","沖縄県"], :prompt => "選択してください" %>

        <%= form.label "住所" %>
        <%= form.text_field :address %>
        
        </br>
        </table>
        </div>

        <div class="panel panel-default", style="padding: 10px">
        <p>お支払い方法</p>
        <hr>
        <table style="margin-bottom: 10px">
        <br>
        <label>
             <%= radio_button_tag "payment", 0 %>代引き
        </label>
        </br>
        
        <br>
        <label>
             <%= radio_button_tag "payment", 1 %>銀行振り込み
        </label>
        </br>
        <tr>
                <th>銀行名</th>
                <td>xxxxxxxxx</td>
            </tr>
            <tr>
                <th>支店名</th>
                <td>xxxxxxxxx</td>
            </tr>
            <tr>
                <th>預金科目</th>
                <td>xxxxxxxxx</td>
            </tr>
            <tr>
                <th>口座番号</th>
                <td>xxxxxxxxx</td>
            </tr>
            <tr>
                <th>口座名義</th>
                <td>xxxxxxxxx</td>
            </tr>
            <tr>
                <th>振込名義</th>
                <td>xxxxxxxxx</td>
            </tr>
        </table>
        
        <%= form.submit "購入確定" %>
    </div>        
    <% end %>
    
</div>