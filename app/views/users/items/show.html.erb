<div class="container">
  
  <hr>
  <table>
    <div class="col-xs-4">
          <%= @item.label.name %>
          <%= @item.jenre.name %>
          <%= attachment_image_tag @item, :jacket_image, :fill, 60, 60, fallback: "no_image.jpg" %>
    </div>
    
    <div class="col-xs-8">
      
          <%= @item.title %>
          <%= @item.artist.name %>
          <p>￥<%= @item.price %>   <%= @item.status ? "販売中" : "売り切れ" %></p>
  
          <p>在庫数:<%= @item.stock %></p>
          
          <% @item.disks.each do |disk| %>
            
            <tr>
              <% disk.songs.each do |song| %>
                <tr>
                  <td><%= song.title %></td>
                </tr>
                  <% end %></tr>
          <% end %>
      
        <tr><td>
          
        <%= form_for [:users, @cart] do |f| %>
          <%= f.select :amount, @current_stock_array.collect {|p| [p]}, :prompt => "選択してください" %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.submit "カートに入れる" %>
        <% end %>
        
        </td></tr>
    </div>
  </table>
  <hr>
</div>